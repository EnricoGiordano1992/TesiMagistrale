#this file has to stay in ~/VREP/programming/remoteApiBindings/lib

CFLAGS = -I../../include -I../../remoteApi -Wall -DNON_MATLAB_PARSING -DMAX_EXT_API_CONNECTIONS=255 -fPIC
LDFLAGS = -lpthread -ldl

OS = $(shell uname -s)
ifeq ($(OS), Linux)
	CFLAGS += -D__linux
	EXT = a
else
	CFLAGS += -D__APPLE__ 
	LDFLAGS += -dynamiclib -current_version 1.0
	EXT = dylib
endif

all: 
	@rm -f lib/*.$(EXT)
	@rm -f *.o 
	gcc $(CFLAGS) -c ../../remoteApi/extApi.c -o extApi.o -lpthread -ldl
	gcc $(CFLAGS) -c ../../remoteApi/extApiPlatform.c -o extApiPlatform.o -lpthread -ldl
	@mkdir -p lib
	ar -cvq lib/libremoteApi.$(EXT) *.o
